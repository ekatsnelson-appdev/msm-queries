<h1>List of all movies</h1>

<table border="1">

<% @list_of_movies.each do |a_film| %>
  <tr>
    <td><%= a_film.id %></td>
    <td>
      <img src="http://robohash.org/<%= a_film.title %>">
    </td>
    <td><%= a_film.title %></td>
    <td><%= a_film.year %></td>

    <td>
      <% d = Director.where({ :id => a_film.director_id }).at(0) %>
      <%= d.name %>
    </td>
    <td>
      <a href="/movies/<%= a_film.id %>">Show details</a>
    </td>
    
  </tr>
<% end %>
